<div class="container text-center mt-3">
  <h1>Games</h1>

  <%# Filtros %>


  <%# Cards de los games %>
  <div class="container">
    <div class="games-cards">
      <% @games.each do |game| %>

        <div class="card pt-2" style="width: 18rem;">
          <%= cl_image_tag game.image.key, height: 350, width: 250 %>
          <div class="card-body">
            <h5 class="card-title"><%= game.name %></h5>
            <p class="card-text"><%= game.description %></p>
            <%= link_to "More", game_path(game), class: "btn btn-primary" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
