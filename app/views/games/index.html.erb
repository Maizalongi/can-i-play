<div class="container text-center mt-3">
  <h1>Games</h1>

  <%# Filtros %>


  <%# Cards de los games %>
  <div class="container">
    <div class="games-cards">
      <% @games.each do |game| %>

        <div class="card" style="width: 18rem;">
          <img src="minecraft.jpg" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= game.name %></h5>
            <p class="card-text"><%= game.description %></p>
            <%= link_to games_show_path, class: "btn btn-primary" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>

</div>
