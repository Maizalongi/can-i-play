<div class="container py-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <div class="bg-dark rounded p-3 shadow">
        <h1> Wishlists de <%= current_user.email %> </h1>
        <% @wishlist.games.each do |game| %>
          <div class="d-flex flex-row justify-content-between">
            <h3> <%= game.name %> </h3>
            <div class="d-flex flex-row">
              <%= button_to "Remove of wishlist", remove_of_wishlist_game_path(game), method: :delete, class: "btn btn-primary mx-2" %>
              <%= link_to "Game", game_path(game), class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
